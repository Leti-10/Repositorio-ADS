<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #fff0f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.CursosController">
    <children>
        <BorderPane prefHeight="600.0" prefWidth="800.0">
            <center>
                <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: f5b3be;" stylesheets="@../../../Css/estilo.css" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab fx:id="tabCadastrar" closable="false" text="Cadastrar">
                                    <content>
                                        <AnchorPane prefHeight="529.0" prefWidth="586.0">
                                            <children>
                                                <VBox alignment="TOP_CENTER" layoutX="21.0" layoutY="25.0" prefHeight="510.0" prefWidth="574.0" style="-fx-border-color: F6729DFF; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 12; -fx-background-color: #fffafa;">
                                                    <children>
                                                        <Label style="-fx-text-fill: #ff486a; -fx-alignment: center;" text="･ﾟ✧ Dados do Curso ✧ﾟ•" textAlignment="CENTER">
                                                            <font>
                                                                <Font name="Harlow Solid Italic" size="24.0" />
                                                            </font>
                                                        </Label>
                                                        <Separator prefHeight="0.0" prefWidth="480.0">
                                                            <VBox.margin>
                                                                <Insets left="35.0" right="35.0" top="12.0" />
                                                            </VBox.margin>
                                                        </Separator>
                                                        <VBox alignment="CENTER" fillWidth="false" spacing="15">
                                                            <children>
                                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                                    <children>
                                                                        <Label prefWidth="100.0" style="-fx-text-fill: #ff486a;" text="Nome:">
                                                                            <font><Font name="System Bold" size="16.0" /></font>
                                                                        </Label>
                                                                        <TextField fx:id="txtNome" prefWidth="200.0" promptText="Digite o nome do curso" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                                    <children>
                                                                        <Label prefWidth="100.0" style="-fx-text-fill: #ff486a;" text="Carga Horária:">
                                                                            <font><Font name="System Bold" size="16.0" /></font>
                                                                        </Label>
                                                                        <TextField fx:id="txtCargaHoraria" prefWidth="200.0" promptText="Ex: 80" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                                    <children>
                                                                        <Label prefWidth="100.0" style="-fx-text-fill: #ff486a;" text="Limite Alunos:">
                                                                            <font><Font name="System Bold" size="16.0" /></font>
                                                                        </Label>
                                                                        <TextField fx:id="txtLimiteAlunos" prefWidth="200.0" promptText="Ex: 30" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                                    <children>
                                                                        <Label prefWidth="100.0" style="-fx-text-fill: #ff486a;" text="Status:">
                                                                            <font><Font name="System Bold" size="16.0" /></font>
                                                                        </Label>
                                                                        <ComboBox fx:id="comboStatus" prefWidth="200.0" promptText="Selecione o status" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER" spacing="10">
                                                                    <children>
                                                                        <Button fx:id="btnAdicionar" styleClass="botao-cute" text="Adicionar" />
                                                                        <Button fx:id="btnEditar" styleClass="botao-cute" text="Atualizar" />
                                                                        <Button fx:id="btnExcluir" styleClass="botao-cute" text="Excluir" />
                                                                        <Button fx:id="btnLimpar" styleClass="botao-cute" text="Limpar" />
                                                                    </children>
                                                                </HBox>
                                                            </children>
                                                            <padding>
                                                                <Insets top="25.0" />
                                                            </padding>
                                                        </VBox>
                                                    </children>
                                                    <padding>
                                                        <Insets top="15.0" />
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab fx:id="tabListagem" closable="false" text="Listagem">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <VBox layoutX="9.0" layoutY="114.0" prefHeight="435.0" prefWidth="590.0" style="-fx-background-color: #fffafa; -fx-border-color: F6729DFF; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 12;">
                                                    <children>
                                          <HBox fillHeight="false" prefHeight="49.0" prefWidth="554.0" spacing="285.0">
                                             <children>
                                                <Label style="-fx-text-fill: #ff486a;" text="｡⋆ Cursos Cadastrados ⋆｡">
                                                   <font>
                                                      <Font name="Harlow Solid Italic" size="18.0" />
                                                   </font>
                                                </Label>
                                                <Button fx:id="btnExportarCursos" alignment="CENTER" contentDisplay="RIGHT" prefHeight="20.0" prefWidth="80.0" styleClass="botao-cute" text="Exportar" textAlignment="CENTER" />
                                             </children>
                                             <padding>
                                                <Insets bottom="2.0" />
                                             </padding>
                                          </HBox>
                                                        <TableView fx:id="tableCursos" prefHeight="500.0" prefWidth="554.0" style="-fx-border-color: F6729DFF; -fx-background-color: fffafa; -fx-border-width: 2;">
                                                            <columns>
                                                                <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
                                                                <TableColumn fx:id="colNome" prefWidth="75.0" text="Nome" />
                                                                <TableColumn fx:id="colCargaHoraria" prefWidth="75.0" text="Carga Horária" />
                                                                <TableColumn fx:id="colLimiteAlunos" prefWidth="75.0" text="Limite" />
                                                                <TableColumn fx:id="colAtivo" prefWidth="75.0" text="Status" />
                                                                <TableColumn fx:id="colQtdAlunos" prefWidth="75.0" text="Qtd. Alunos" />
                                                            </columns>
                                                            <columnResizePolicy>
                                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                            </columnResizePolicy>
                                                        </TableView>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                                    </padding>
                                                </VBox>
                                    <VBox layoutX="9.0" layoutY="8.0" prefHeight="94.0" prefWidth="590.0" style="-fx-background-color: #fffafa; -fx-border-color: F6729DFF; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 12;">
                                       <children>
                                          <Label style="-fx-text-fill: #ff486a; -fx-alignment: center;" text="♡ Buscar Cursos ♡">
                                             <VBox.margin>
                                                <Insets bottom="1.0" />
                                             </VBox.margin>
                                             <font>
                                                <Font name="Harlow Solid Italic" size="18.0" />
                                             </font>
                                          </Label>
                                          <Separator prefWidth="200.0">
                                             <VBox.margin>
                                                <Insets />
                                             </VBox.margin>
                                             <padding>
                                                <Insets bottom="5.0" />
                                             </padding>
                                          </Separator>
                                          <HBox prefHeight="100.0" prefWidth="200.0" spacing="7.0">
                                             <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #ff486a;" text="Filtro:">
                                                   <HBox.margin>
                                                      <Insets top="3.0" />
                                                   </HBox.margin>
                                                </Label>
                                                <ComboBox fx:id="comboFiltro" prefHeight="30.0" prefWidth="114.0" promptText="Selecione" styleClass="botao-cute">
                                                   <HBox.margin>
                                                      <Insets />
                                                   </HBox.margin>
                                                </ComboBox>
                                                <TextField fx:id="txtBusca" prefWidth="200" promptText="Digite para buscar" />
                                                <Button fx:id="btnBuscar" prefHeight="20.0" prefWidth="80.0" styleClass="botao-cute" text="Buscar" HBox.hgrow="NEVER">
                                                   <HBox.margin>
                                                      <Insets />
                                                   </HBox.margin>
                                                </Button>
                                                <Button fx:id="btnLimparBusca" prefHeight="20.0" prefWidth="80.0" styleClass="botao-cute" text="Limpar" />
                                             </children>
                                          </HBox>
                                       </children>
                                       <padding>
                                          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                       </padding>
                                    </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </StackPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
